rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile documents.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Jobs are scoped to the authenticated user.
    match /jobs/{jobId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if false; // Jobs must be created via secure backend API
      allow update, delete: if false;
    }

    // Outputs can be read/written only by owner.
    match /outputs/{outputId} {
      allow read, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if false;
    }
  }
}
